<%= form_for([@group, @user]) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="field">
    <%= f.label :tagline %><br>
    <%= f.text_field :tagline %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :required => true %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :required => true %> <br>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %> <br>
    <%= f.password_field :password_confirmation, :required => true %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.text_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :github_username %><br>
    <%= f.text_field :github_username %>
  </div>
  <div class="field">
    <%= f.label :linkedin_url %><br>
    <%= f.text_field :linkedin_profile %>
  </div>
  <div class="field">
    <%= f.label :twitter_username %><br>
    <%= f.text_field :twitter_username %>
  </div>
  <div class="field">
    <%= f.label :slack_username %><br>
    <%= f.text_field :slack_username %>
  </div>
  <div class="field">
    <%= f.label :group_id %>
    <%= f.select :group_id, Group.all.map {|group|[group.name, group.id]}, :include_blank => true, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
